{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Comparison of Number of Disciples in Religions in the World From 2010 - 2050",
  "params": [
    {
      "name": "year_select",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2050,
        "step": 10,
        "name": "Select Year to Filter: "
      }
    },
    {
      "name": "legend_selection",
      "select": {"type": "point", "fields": ["Region"]},
      "bind": "legend"
    }
  ],
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/hongjchang/FIT3179Assignment2/main/datasets/religion_by_num_of_population.csv"
  },
  "transform": [
    {"filter": "year(datum.Year) == year_select"},
    {
      "fold": ["Christians","Muslims","Unaffiliated","Hindus","Buddhists","FolkReligions","OtherReligions","Jews","AllReligions"], "as": ["ReligionType", "ReligionNum"]
    }
  ],
  "mark": {"type": "bar", "cornerRadiusTopLeft":5, "cornerRadiusTopRight": 5},
  "encoding": {
    "x": {"field": "ReligionType", "type": "nominal", "title": "Religions"},
    "y": {"aggregate": "count", "field": "ReligionNum", "type": "quantitative", "title": "Number of Disciples"},
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Regions",
      "scale": {
        "range": ["#f6eff7","#d0d1e6","#a6bddb","#67a9cf","#3690c0","#02818a","#016450"]
      }
    },
    "opacity": {
      "condition": {"param": "legend_selection", "value": 1},
      "value": 0.1
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "ReligionType", "type": "nominal", "title": "Type of Religion"},
      {"field": "ReligionNum", "type": "quantitative", "title": "Total Number of Disciples", "format": ".4s"}
    ]
  },
  "config": {}
}